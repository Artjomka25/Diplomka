@model IEnumerable<Diplomka.Models.Warehouse>
@{
    ViewData["Title"] = "Список складов";
}

<!DOCTYPE html>

<html>
<head>
    <title>Склады</title>
</head>

<body>
    <h2>Склады</h2>
    @if (Diplomka.Controllers.AccountController.Role=="Администратор")
    {
        <h5><a asp-action="Create"> Новый склад  </a><a asp-action="CargoRemnants">   | Остатки грузов</a></h5>
    } 

    <table class="table table-bordered table-primary">
        <tr>
            <th>Id склада</th>
            <th>Название</th>
            <th>Адрес</th>            
            <th></th>
            <th></th>

        </tr>
        @foreach (Warehouse warehouse in Model)
        {
            <tr bgcolor = "#FFFFFF">
                <td>@warehouse.WarehouseID</td>
                <td>@warehouse.Name</td>
                <td>@warehouse.Address</td>         
                @if (Diplomka.Controllers.AccountController.Role=="Администратор")
                {
                    <td><a asp-action="Edit" asp-controller="Warehouse" asp-route-id="@warehouse.WarehouseID">Изменить</a></td> 
                    <td><a asp-action="Delete" asp-controller="Warehouse" asp-route-id="@warehouse.WarehouseID">Удалить</a></td>                    } 
                
            </tr>
        }      
    </table>
</body>
</html>
